<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="subtitle">
        <item name="android:textColor">#4d4d4d</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle2">
        <item name="android:textColor">#4d4d4d</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="content">
        <item name="android:textColor">#4d4d4d</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edit_amount">
        <item name="android:textColor">#4d4d4d</item>
        <item name="android:textSize">70sp</item>
        <item name="android:alpha">.5</item>
    </style>



    <style name="button_next">
        <item name="android:text">@string/general_next</item>
        <item name="android:layout_height">@dimen/button_next_height</item>
        <item name="android:backgroundTint">@drawable/btn_next_background_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_confirm">
        <item name="android:text">@string/confirm_confirm</item>
        <item name="android:layout_height">@dimen/button_next_height</item>
        <item name="android:backgroundTint">@drawable/btn_confirm_background_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_tryAgain">
        <item name="android:text">@string/general_try_again</item>
        <item name="android:layout_height">@dimen/button_tryAgain_height</item>
    </style>

</resources>